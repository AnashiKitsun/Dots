##------- AUDIO -------##

# pulseaudio volume UP (+5)
XF86AudioRaiseVolume
	pamixer --change-volume +5

# pulseaudio volume DOWN (-5)
XF86AudioLowerVolume
	pamixer --change-volume -5

# pulseaudio volume MUTE (0)
XF86AudioMute
	pamixer --toggle-mute

##------- TERMINAL -------##

# kitty
super + Return
	kitty

# kitty but for flexing
super + shift + Return
	kitty -e ~/.config/neofetch/launch.sh

# ranger
super + e
	kitty -e ranger

##------- SYSTEM -------##

# sys shutdown
super + ctrl + shift + q
	systemctl poweroff

# sys restart
super + ctrl + shift + r
	reboot

# update
super + ctrl + u
	bspc rule -a \* -o state=floating && kitty -e $SHELL -c "figlet update... && sudo pacman -Syu"

##------- ENVIRONMENT -------##

# restart polybar
super + shift + p
	~/.config/polybar/launch.sh

# bspwm quit
super + ctrl + q
	bspc quit

# bspwm restart
super + ctrl + r
	bspc wm -r

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

##------- NAVIGATION -------##

# rofi run
super + space
	rofi -show run

# rofi ssh
super + shift + space
	rofi -show ssh

